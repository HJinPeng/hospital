<!--pages/serve/childCpns/h-hot/h-hot.wxml-->
<view class="out-h-hot">
  <block wx:for="{{lists}}" wx:key="index">
    <view class="item" bindtap="clickHospital" data-model="{{item}}">
      <h-border>
        <view class="content">
          <view class="left">
            <image class="image" src="{{item.picture}}" mode="widthFix"/>
          </view>
          <view class="right">
            <view class="name">{{item.hospital}}</view>
            <view class="tag">
              <block wx:for="{{item.good}}" wx:key="index">
                <text class="tag-item">{{item}}</text>
              </block>
            </view>
            <view class="intro">{{item.intro}}</view>
            <!-- <van-rate size="{{ 13 }}" value="4.5" allow-half/> -->
          </view>
        </view>
      </h-border>
    </view>
  </block>
</view>