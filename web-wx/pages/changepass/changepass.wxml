
<view class="wel-title">
  修改密码
</view>
<van-cell-group>
  <van-field
    value="{{ password }}"
    label="新密码"
    placeholder="请输入新密码"
    error-message="{{error_password}}"
    bind:blur="checkPassword"
  />
</van-cell-group>

<view class="login">
  <van-button type="info" size="large" bindtap="handleChange">修改</van-button>
</view>

<van-toast id="van-toast" />