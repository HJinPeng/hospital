/* pages/profile/profile.wxss */
.info {
  display: flex;
  align-items: center;
  background-color: #fff;
  font-size: 28rpx;
  /* color: rgb(50, 50, 50); */
  margin-top: 1px;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
}

.info .left {
  width: 20%;
  padding: 20rpx;
}

.info .left .image {
  width: 100%;
  border-radius: 50%;
}

.info .center {
  flex: 1;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.info .center .line {
  /* width: 1px; */
  /* width: 0; */
  margin-top: 6px;
  margin-bottom: 6px;
  border-top: 1px solid rgb(194, 194, 194);
  background-color: #888;
}

.info .right {
  width: 10%;
  font-size: 46rpx;
  color: #666;
}

.h-operate,.h-setting {
  margin-top: 30rpx
}

.link {
  font-size: 24rpx;
  text-align: center;
  margin-top: 40rpx;
}

.link .phone {
  color: #1296db;
  padding-left: 10rpx;
}

